<!DOCTYPE html>
<html lang="en">
<head>
    <title>CHPC @Page.Title</title>
    <meta charset="utf-8" />

    <link rel="stylesheet" href="~/css/Style.css" type="text/css" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <script src="~/Scripts/dhtmlxscheduler.js" type="text/javascript"></script>
    <link rel="stylesheet" href="~/Scripts/dhtmlxscheduler_flat.css" type="text/css" />

    <script type="text/javascript">
        function init() {
            scheduler.init('scheduler_here', new Date(), "month");
        }
    </script>
</head>
<body class="body" onload="init()">
    <section>
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </section>

    <header class="mainHeader">
        <a href="~/" class="home_link"><img src="~/Images/CHPC Logo.png" width="150" /></a>
        <nav>
            <ul>
                <li><a href="~/MainPages/Spiritual.cshtml" class="spiritual_tab">Spiritual</a></li>
                <li><a href="~/MainPages/Physical.cshtml" class="physical_tab">Physical</a></li>
                <li><a href="~/MainPages/Emotional.cshtml" class="emotional_tab">Emotional</a></li>
                <li><a href="~/MainPages/Family.cshtml" class="family_tab">Family</a></li>
                <li><a href="~/MainPages/Social.cshtml" class="social_tab">Social</a></li>
            </ul>
        </nav>
    </header>

    <div class="mainContent">
        <div class="content">
            <article class="topcontent">
                <header>
                    <h2><a href="#" rel="bookmark" title="Permalink to this POST TITLE">About Us</a></h2>
                </header>

                <content>
                    @(new HtmlString(Page.About))
                </content>

                <footer>
                    <p class="post-info"></p>
                </footer>
            </article>

            <article class="middlecontent">
                <header>
                    <h2><a href="#" rel="bookmark" title="Permalink to this POST TITLE">Articles</a></h2>
                </header>

                <content>
                    <iframe @(new HtmlString(Page.Articles)) frameborder="0" width="100%" height="220px"></iframe>
                </content>

                <footer>
                    <p class="post-info">This was last visited on @DateTime.Now</p>
                </footer>
            </article>

            <article class="bottomcontent">
                <header>
                    <h2><a href="#" rel="bookmark" title="Permalink to this POST TITLE">Resources</a></h2>
                </header>

                <content>
                    <iframe @(new HtmlString(Page.Resources)) frameborder="0" width="105%" height="600px" style="margin-left: -20px;"></iframe>
                </content>

                <footer>
                    <p class="post-info">This was last visited on @DateTime.Now</p>
                </footer>
            </article>
        </div>

        <aside class="top-sidebar">
            <article>
                <h2>Resources</h2>
                <p><a href="~/MainPages/Resources.cshtml">Newsletter</a></p>
            </article>
        </aside>

        <aside class="middle-sidebar">
            <article>
                    <div id="scheduler_here" class="dhx_cal_container" style='width:100%; height:360px; padding: 10px;'>
                        <div class="dhx_cal_navline">
                            <div class="dhx_cal_prev_button">&nbsp;</div>
                            <div class="dhx_cal_next_button">&nbsp;</div>
                            <div class="dhx_cal_today_button"></div>
                            <div class="dhx_cal_date"></div>
                        </div>
                        <div class="dhx_cal_header"></div>
                        <div class="dhx_cal_data"></div>
                    </div>
                <p>Click <a href="~/SubPages/Calendar.cshtml" target="_blank">here</a> for fullscreen</p>
            </article>
        </aside>

        <aside class="bottom-sidebar">
            <article>
                <h2>Need Help Now</h2>
                <p><a href="~/MainPages/NeedHelpNow.cshtml">Emergency Numbers</a></p>
                <p><a href="http://www.preventsexualassault.army.mil/">SHARP</a></p>
            </article>
        </aside>
    </div>

    <footer class="mainFooter">
        <div class="content-wrapper">
            <p>&copy; @DateTime.Now.Year - Health Services</p>
        </div>
    </footer>
</body>
</html>